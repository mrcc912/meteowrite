<% layout('layout') -%>

<link href="stylesheets/bootstrap.min.css" rel="stylesheet">
<h1> User: <%= user.username %> </h1>

<div class="row">
<div class="span3"> <b> Articles Read: </b> </div>
</div>

<ol>
<% for(var i = 0; i < user.articlesRead.length; i++) { %>
  <li> <%= user.articlesRead[i] %> </li>
<% } %>
</ol>

<div class="row">
<div class="span3"> <b> <%= "Article: " + key1  %> </b> </div>
<div class="span2 offset5"> <b><u>KEYWORDS</u></b> </div>
<div class="span2"><b><u>RELEVENCE</u></b> </div>
</div>

<% for(var key1 in user.keywords) { %>
<div class="row">
<div class="span2 offset8"> <%= key1 %> </div>
<div class="span2"> <%= user.keywords[key1] %> </div>
</div>
<% } %>

<form name="<%= user.username %>" action="http://ec2-54-235-227-153.compute-1.amazonaws.com:5000/articleRead" method="post">
<input type="hidden" name="userid" value="<%= user.username %>" />
Article Read: <input type="text" name="articleid">
<input type="submit" value="Submit">
</form>

